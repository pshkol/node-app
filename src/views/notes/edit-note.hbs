<div class="col-md-4">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._doc._id}}?_method=put" method="post">
                <input type="hidden" name="_method" value="put">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Title" name="title" value={{note._doc.title}}>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{note._doc.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>